            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="C"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="⌫"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear6"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnXe2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="X²"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1sX"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="⅟x"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModulo2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="|x|"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="exp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMod"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="mod"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear7"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnXr2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="x√2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPA"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="("/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPF"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text=")"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNF"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="n!"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDivisao"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="÷"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear8"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnXeY"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="xʸ"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="7"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="8"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="9"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiplicacao"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear9"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn10eX"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="10ˣ"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="4"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="5"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="6"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubtracao"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear10"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLog"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="log"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="3"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdicao"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="12sp"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear11"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
