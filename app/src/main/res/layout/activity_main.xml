<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="32sp"
        android:text="0"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/resUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="textEnd"
        android:width="320dp"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/edtUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resUser"
        android:layout_marginTop="10dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="DEG"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="F-E"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMC"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="MC"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMR"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="MR"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMMais"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="M+"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMMenos"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="M-"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMS"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="MS"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDoisND"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="2ⁿᵈ"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSin"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="SIN"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCos"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="COS"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTan"
            android:layout_width="75dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="TAN"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear3"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHyp"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="HYP"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSec"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="SEC"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCsc"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="CSC"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCot"
            android:layout_width="75dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="COT"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear4"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModulo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="|X|"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDms"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="dms"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeg2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:cornerRadius="0dp"
            android:text="Deg"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRand"
            android:layout_width="80dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="Rand"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear5"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDoisND2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            app:cornerRadius="0dp"
            android:text="2ⁿᵈ"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPi"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
