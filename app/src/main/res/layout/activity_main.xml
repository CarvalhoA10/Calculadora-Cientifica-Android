        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text="0"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVirgula"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:text=","/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIgual"
